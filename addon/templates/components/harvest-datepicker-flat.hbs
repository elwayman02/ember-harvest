{{#harvest-picker-header
    prefix=prefix
    previous=(action 'previous')
    next=(action 'next')
    toggleView=(action 'toggleView')
}}
  {{#if showMonthView}}
    {{displayYear}}
  {{else}}
    {{displayMonthName}} {{displayYear}}
  {{/if}}
{{/harvest-picker-header}}
{{harvest-calendar-view
    isHidden=showMonthView
    prefix=prefix
    selectDay=(action 'selectDay')
    selectWeek=(action 'selectWeek')
    selectedDate=selectedDate
    selectedRange=selectedRange
    displayDate=displayDate
    weekStart=weekStart
}}
{{harvest-month-view
    isHidden=(not showMonthView)
    prefix=prefix
    selectedMonth=month
    select=(action 'selectMonth')
}}