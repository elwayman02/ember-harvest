{{#basic-dropdown as |dropdown|}}
  {{#dropdown.trigger}}
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      <input class="{{inputClass}}" value={{formattedDate}} disabled={{disableInput}}>
    {{/if}}
  {{/dropdown.trigger}}
  {{#dropdown.content}}
    {{harvest-datepicker-flat
        isWeekpicker=isWeekpicker
        prefix=prefix
        minDate=minDate
        maxDate=maxDate
        selectedDate=selectedDate
        selectedRange=selectedRange
        selectDay=(action 'selectDay')
        selectWeek=(action 'selectWeek')
        weekStart=weekStart
    }}
  {{/dropdown.content}}
{{/basic-dropdown}}